[
    {ro2erl_bridge, [
        %% Function to process messages and extract topic information
        %% Format: {Module, Function} or {Module, Function, Args}
        %% Must return {topic, TopicName, Filterable, MsgSize}
        %% If not specified, uses default processor that returns {topic, <<"unknown">>, false, 0}
        %{msg_processor, {my_module, my_function}},
        %% Function to handle messages received from the hub
        %% Format: {Module, Function} or {Module, Function, Args}
        %{dispatch_callback, {my_module, my_function}}
        %% Period (in milliseconds) for sending topic updates to connected hubs
        %% Default: 1000 (1 second)
        % {topic_update_period, 1000}
    ]},

    {kernel, [
        {logger_level, debug},
        {logger, [
            {handler, default, logger_std_h, #{
                level => debug,
                formatter => {logger_formatter, #{
                    legacy_header => false,
                    single_line => true
                }}
            }}
        ]}
    ]}
].
